<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.Control.AppWidgetContainer">


    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/widgetpcstate"
                android:layout_width="30dp"
                android:layout_height="30dp"


                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:paddingStart="5dp"
                android:text="off"
                android:textAlignment="center"
                android:textSize="15dp" />

            <ImageButton
                android:id="@+id/widgetrefreshbutton"
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_gravity="right"


                android:src="@drawable/ic_widget_boot_refresh" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/widgetbootbutton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_widget_boot_boot"
                android:backgroundTint="@color/on"
                style="@style/ControlButtons"
                />

            <ImageButton
                android:id="@+id/widgetoffbutton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_widget_boot_boot"
                android:backgroundTint="@color/off"
                style="@style/ControlButtons"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/widgetsleepbutton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_widget_boot_sleep"
                android:backgroundTint="#fca800"
                style="@style/ControlButtons"
                />
            <ImageButton
                android:id="@+id/widgetrestartbutton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_widget_boot_restart"
                android:backgroundTint="#007AFC"
                style="@style/ControlButtons"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>